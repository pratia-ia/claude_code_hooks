{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cmd /c powershell -ExecutionPolicy Bypass -File \"%CLAUDE_PLUGIN_DIR%\\hooks\\log-conversation.ps1\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "cmd /c powershell -ExecutionPolicy Bypass -File \"%CLAUDE_PLUGIN_DIR%\\hooks\\log-conversation.ps1\"",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cmd /c powershell -ExecutionPolicy Bypass -File \"%CLAUDE_PLUGIN_DIR%\\hooks\\log-conversation.ps1\"",
            "timeout": 15
          }
        ]
      }
    ]
  }
}